<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".summaryDetailsActivity"
    android:background="@color/hamMenuBackground">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:layout_marginBottom="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/headerBackground">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profile_image"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/avatar"
                    android:layout_marginTop="14dp"
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="10dp"/>

                />

                <TextView
                    android:id="@+id/detailsDesignerName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Каримыч"
                    android:textSize="15dp"
                    android:textColor="@color/goldyGradient"
                    android:layout_marginVertical="12dp" />


                <Button
                    android:id="@+id/closeDetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:background="@android:color/transparent"
                    android:layout_gravity="right"
                    android:drawableRight="@drawable/close_btn" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/detailsSpeciality"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3D дизайнер"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    android:layout_marginLeft="14dp"
                    android:layout_marginTop="8dp" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="13dp"
                    android:layout_marginRight="12dp"
                    android:gravity="right">

                    <TextView
                        android:id="@+id/detailsSalary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10000"
                        android:textColor="@color/goldyGradient"
                        android:textSize="15dp"
                        android:layout_marginLeft="11dp"
                        />


                    <TextView
                        android:id="@+id/detailsCurrency"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="тг"
                        android:textSize="15dp"
                        android:textColor="@color/goldyGradient"
                        android:layout_marginLeft="7dp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15dp"
                        android:text="/ кв.м"
                        android:textColor="@color/goldyGradient"
                        android:layout_marginLeft="7dp"
                        />

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/detailsCity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Алматы"
                android:textSize="13dp"
                android:layout_marginLeft="14dp"
                android:textColor="@color/white"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Навыки:"
                android:textSize="15dp"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="9dp"
                android:textColor="@color/grey"/>

            <TextView
                android:id="@+id/detailsSkills"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="4dp"
                android:textSize="13dp"
                android:textColor="@color/white"
                android:text="3DS-Max/corona+render, AutoCad, Photoshop"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Опыт:"
                android:textSize="15dp"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="14dp"
                android:textColor="@color/grey"/>

            <TextView
                android:id="@+id/detailsExperience"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="4dp"
                android:textColor="@color/white"
                android:textSize="13dp"
                android:text="3 года"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Тип занятости:"
                android:textSize="15dp"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="14dp"
                android:textColor="@color/grey"/>

            <TextView
                android:id="@+id/detailsJobType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="4dp"
                android:textColor="@color/white"
                android:textSize="13dp"
                android:text="Удаленная работа"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Образование:"
                android:textSize="15dp"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="14dp"
                android:textColor="@color/grey"/>

            <TextView
                android:id="@+id/detailsEducation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="4dp"
                android:textColor="@color/white"
                android:textSize="13dp"
                android:text="Бакалавр - Промышленное и гражданское строительство
        Магистратура - Производство строительных материалов,изделий и конструкций
        3d - Школа"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Доп. информация:"
                android:textSize="15dp"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="14dp"
                android:textColor="@color/grey"/>

            <TextView
                android:id="@+id/detailsInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="4dp"
                android:textColor="@color/white"
                android:textSize="13dp"
                android:text="Здравствуйте, предоставляю услугу 3д визуализации."/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Контакты:"
                android:textSize="15dp"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="14dp"
                android:textColor="@color/grey"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/phone"
                    android:layout_marginLeft="14dp"
                    android:layout_marginTop="4dp"/>

                <TextView
                    android:id="@+id/detailsPhoneNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="3dp"
                    android:textColor="@color/white"
                    android:textSize="13dp"
                    android:text="+77072335599"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/email"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="10dp"/>

                <TextView
                    android:id="@+id/detailsEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/white"
                    android:textSize="13dp"
                    android:text="karim.bozzhanov@alsi.com"/>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ссылки:"
                android:textSize="15dp"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="14dp"
                android:textColor="@color/grey"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/telegram"
                    android:layout_marginLeft="14dp"
                    android:layout_marginTop="7dp"/>

                <TextView
                    android:id="@+id/detailsTelegram"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/white"
                    android:textSize="13dp"
                    android:text="karim_bozzhanov"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/instagram"
                    android:layout_marginLeft="14dp"
                    android:layout_marginTop="10dp"/>

                <TextView
                    android:id="@+id/detailsInstagram"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="8dp"
                    android:textColor="@color/white"
                    android:textSize="13dp"
                    android:text="karim_bozzhanov"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>