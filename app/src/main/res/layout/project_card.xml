<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="@color/mainColor"
    android:id="@+id/project_card">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="14dp"
        android:orientation="vertical"
        android:background="@color/dark_grey"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/project_profile_image"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:src="@drawable/avatar"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"/>
            />

            <TextView
                android:id="@+id/project_card_userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="StandUser"
                android:textSize="15dp"
                android:textFontWeight="400"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/goldyGradient"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="|"
                android:textColor="@color/grey"
                android:layout_marginTop="7dp"
                android:layout_marginLeft="5dp"
                android:textSize="25dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/open_eye"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="17dp"/>

            <TextView
                android:id="@+id/project_card_views"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="999"
                android:textSize="13dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="4dp"
                android:textFontWeight="700"
                android:textColor="@color/grey"/>

            <TextView
                android:id="@+id/project_card_timeCreating"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="13:21 12.12.22"
                android:textSize="11dp"
                android:gravity="right"
                android:textColor="@color/grey"
                android:layout_marginTop="3dp"
                />


        </LinearLayout>

        <TextView
            android:id="@+id/project_card_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3D дизайнер, чертежник, визуализация"
            android:textColor="@color/white"
            android:layout_marginLeft="11dp"
            android:layout_marginTop="11dp"
            android:textSize="18dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/project_card_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3D моделирование"
                android:textColor="@color/grey"
                android:layout_marginLeft="11dp"
                android:layout_marginTop="10dp"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="15dp"
                android:gravity="right">

                <TextView
                    android:id="@+id/project_card_salary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10000"
                    android:textColor="@color/goldyGradient"
                    android:textSize="20dp"
                    android:layout_marginLeft="11dp"
                    />


                <TextView
                    android:id="@+id/project_card_currency"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="тг"
                    android:textSize="20dp"
                    android:textColor="@color/goldyGradient"
                    android:layout_marginLeft="7dp"
                    />


            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>