<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditProfileActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="153dp"
        android:orientation="vertical"
        android:background="@color/headerBackground">

        <Button
            android:id="@+id/closeEditProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:layout_gravity="right"
            android:drawableRight="@drawable/close_btn" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/detailProfileImage"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:src="@drawable/avatar"
                android:layout_marginLeft="33dp"
                android:layout_marginBottom="27dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/editUserName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="27dp"
                    android:hint="@string/editUserName"
                    android:background="@color/hamMenuBackground"
                    android:paddingVertical="15dp"
                    android:paddingLeft="10dp"
                    android:layout_marginRight="30dp"
                    android:textColorHint="@color/golden"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <EditText
        android:id="@+id/editUserFullName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/dark_grey"
        android:layout_marginTop="25dp"
        android:hint="ФИО"
        android:paddingVertical="7dp"
        android:paddingLeft="10dp"
        android:textColorHint="@color/grey"
        android:layout_marginHorizontal="35dp"/>

    <EditText
        android:id="@+id/editUserCity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/dark_grey"
        android:layout_marginTop="25dp"
        android:hint="Город"
        android:paddingVertical="7dp"
        android:paddingLeft="10dp"
        android:textColorHint="@color/grey"
        android:layout_marginHorizontal="35dp"/>

    <Spinner
        android:id="@+id/editUserCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="25dp"/>

    <EditText
        android:id="@+id/editUserEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/dark_grey"
        android:layout_marginTop="25dp"
        android:hint="Email"
        android:paddingVertical="7dp"
        android:paddingLeft="10dp"
        android:textColorHint="@color/grey"
        android:layout_marginHorizontal="35dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Пол: "
            android:layout_marginLeft="40dp"
            android:paddingRight="35dp"
            android:textSize="18dp"
            android:textColor="@color/white"
            android:layout_marginTop="20dp" />

        <CheckBox
            android:id="@+id/maleCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/Men"
            />

        <CheckBox
            android:id="@+id/femaleCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:text="@string/woman"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Получать уведомления на почту: "
            android:layout_marginLeft="40dp"
            android:paddingRight="5dp"
            android:textSize="18dp"
            android:textColor="@color/white"
            android:layout_marginTop="10dp"/>

        <CheckBox
            android:id="@+id/editUserNotifications"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="bottom">
        <Button
            android:id="@+id/saveProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/greenGradient"
            android:textAllCaps="false"
            android:text="@string/save"
            android:layout_marginHorizontal="36dp"
            android:paddingVertical="15dp"
            android:layout_marginBottom="38dp"
            android:textSize="15dp"
            />

    </LinearLayout>

</LinearLayout>