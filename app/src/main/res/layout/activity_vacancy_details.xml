<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".summaryDetailsActivity"
    android:background="@color/hamMenuBackground">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:layout_marginBottom="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/headerBackground">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="14dp">

                    <TextView
                        android:id="@+id/companyName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Компания"
                        android:textSize="15dp"
                        android:textColor="@color/goldyGradient"
                        android:layout_marginTop="6dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="11dp"
                            android:textColor="@color/white"
                            android:text="создано"/>

                        <TextView
                            android:id="@+id/vacancyCreationTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="11dp"
                            android:layout_marginLeft="3dp"
                            android:textColor="@color/white"
                            android:text="6 фев. 21:00"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="11dp"
                            android:layout_marginLeft="3dp"
                            android:textColor="@color/white"
                            android:text="пользователем"/>

                        <TextView
                            android:id="@+id/vacancyUserName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="11dp"
                            android:layout_marginLeft="3dp"
                            android:textColor="@color/white"
                            android:text="StandUser"/>

                    </LinearLayout>



                </LinearLayout>


                <Button
                    android:id="@+id/closeVacancyDetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:background="@android:color/transparent"
                    android:layout_gravity="right"
                    android:drawableRight="@drawable/close_btn" />

            </LinearLayout>

            <TextView
                android:id="@+id/detailsVacancyName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Нужен 3D визуализатор (corona)"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Тип занятости:"
                    android:textSize="15dp"
                    android:layout_marginLeft="14dp"
                    android:layout_marginTop="14dp"
                    android:textColor="@color/grey"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="13dp"
                    android:layout_marginRight="12dp"
                    android:gravity="right">

                    <TextView
                        android:id="@+id/detailsVacancySalary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10000"
                        android:textColor="@color/goldyGradient"
                        android:textSize="15dp"
                        android:layout_marginLeft="11dp"
                        />


                    <TextView
                        android:id="@+id/detailsVacancyCurrency"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="тг"
                        android:textSize="15dp"
                        android:textColor="@color/goldyGradient"
                        android:layout_marginLeft="7dp"
                        />

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/detailsVacancyJobType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="4dp"
                android:textColor="@color/white"
                android:textSize="13dp"
                android:text="Удаленная работа"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="График:"
                android:textSize="15dp"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="9dp"
                android:textColor="@color/grey"/>

            <TextView
                android:id="@+id/detailsVacancySchedule"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="4dp"
                android:textSize="13dp"
                android:textColor="@color/white"
                android:text="Неполный"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Опыт работы:"
                android:textSize="15dp"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="14dp"
                android:textColor="@color/grey"/>

            <TextView
                android:id="@+id/detailsVacancyExperience"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="4dp"
                android:textColor="@color/white"
                android:textSize="13dp"
                android:text="3 года"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Обязанность:"
                android:textSize="15dp"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="14dp"
                android:textColor="@color/grey"/>

            <TextView
                android:id="@+id/detailsVacancyDuty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="4dp"
                android:textColor="@color/white"
                android:textSize="13dp"
                android:text="Моделирование предметов мягкой мебели. Только геометрию и развертка Модели мидполи под сдс"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Требование:"
                android:textSize="15dp"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="14dp"
                android:textColor="@color/grey"/>

            <TextView
                android:id="@+id/detailsVacancyRequirements"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="4dp"
                android:textColor="@color/white"
                android:textSize="13dp"
                android:text="Уверенный пользователь 3d max"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Условия:"
                android:textSize="15dp"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="14dp"
                android:textColor="@color/grey"/>

            <TextView
                android:id="@+id/detailsVacancyConditions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="4dp"
                android:textColor="@color/white"
                android:textSize="13dp"
                android:text="Размер гонорара за модель обсуждается индивидуально. Без примера работ не отвечаю"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Место работы:"
                android:textSize="15dp"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="14dp"
                android:textColor="@color/grey"/>

            <TextView
                android:id="@+id/detailsVacancyJobPlace"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="4dp"
                android:textColor="@color/white"
                android:textSize="13dp"
                android:text="Адрес (какой-то адрес или город)"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Контакты:"
                android:textSize="15dp"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="14dp"
                android:textColor="@color/grey"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/phone"
                    android:layout_marginLeft="14dp"
                    android:layout_marginTop="4dp"/>

                <TextView
                    android:id="@+id/detailsVacancyPhoneNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="3dp"
                    android:textColor="@color/white"
                    android:textSize="13dp"
                    android:text="+77072335599"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/email"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="10dp"/>

                <TextView
                    android:id="@+id/detailsVacancyEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/white"
                    android:textSize="13dp"
                    android:text="karim.bozzhanov@alsi.com"/>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ссылки:"
                android:textSize="15dp"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="14dp"
                android:textColor="@color/grey"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/telegram"
                    android:layout_marginLeft="14dp"
                    android:layout_marginTop="7dp"/>

                <TextView
                    android:id="@+id/detailsVacancyTelegram"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/white"
                    android:textSize="13dp"
                    android:text="karim_bozzhanov"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/instagram"
                    android:layout_marginLeft="14dp"
                    android:layout_marginTop="10dp"/>

                <TextView
                    android:id="@+id/detailsVacancyInstagram"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="8dp"
                    android:textColor="@color/white"
                    android:textSize="13dp"
                    android:text="karim_bozzhanov"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>