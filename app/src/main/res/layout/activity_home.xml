<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_activity"
    android:layout_width="match_parent"
    android:background="@color/mainColor"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">

    <include layout="@layout/desi_bar"/>

    <LinearLayout
        android:id="@+id/hamMenu"
        android:layout_width="186dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="end"
        android:background="@drawable/header_gradient"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="93dp"
            android:background="@color/hamMenuBackground">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_image"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:src="@drawable/avatar"
                android:layout_alignParentRight="true"
                android:layout_marginTop="12dp"
                android:layout_marginRight="13dp"/>

            />

            <TextView
                android:layout_below="@id/profile_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="userName"
                android:fontFamily="@font/humanist521bt_roman"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@color/golden"
                android:layout_alignParentRight="true"
                android:layout_marginTop="9dp"
                android:layout_marginRight="13dp"/>
        </RelativeLayout>

        <Button
            style="@style/Widget.Material3.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/profile"
            android:textColor="@color/white"
            android:fontFamily="@font/humanist521bt_roman"
            android:textSize="18dp"
            android:layout_gravity="end"
            android:backgroundTint="@android:color/transparent"
            android:drawableRight="@drawable/user_logo"
            />

        <Button
            style="@style/Widget.Material3.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/porfolio"
            android:textColor="@color/white"
            android:fontFamily="@font/humanist521bt_roman"
            android:textSize="18dp"
            android:layout_gravity="end"
            android:backgroundTint="@android:color/transparent"
            android:drawableRight="@drawable/file_dock"
            />

        <Button
            style="@style/Widget.Material3.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Log_out"
            android:textColor="@color/white"
            android:fontFamily="@font/humanist521bt_roman"
            android:textSize="18dp"
            android:layout_gravity="end"
            android:backgroundTint="@android:color/transparent"
            android:drawableRight="@drawable/sign_out"
            />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/frame_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="60dp">

    </FrameLayout>

    <include layout="@layout/footer"/>


</androidx.drawerlayout.widget.DrawerLayout>